---
import Layout from "@/layouts/Layout.astro";
import ForgotPasswordForm from "@/components/auth/ForgotPasswordForm";

// Check if user is already authenticated
// Note: Middleware will handle this redirect automatically,
// but we keep this check for explicit clarity and to avoid unnecessary rendering
const token = Astro.cookies.get("sb-access-token");

if (token?.value) {
  return Astro.redirect("/profiles");
}
---

<Layout title="Odzyskiwanie hasła - Rytmik">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
      {/* Header */}
      <div class="text-center">
        <a href="/" class="inline-block mb-6">
          <h1 class="text-4xl font-bold text-primary">Rytmik</h1>
        </a>
        <h2 class="text-2xl font-bold">Odzyskiwanie hasła</h2>
        <p class="mt-2 text-sm text-muted-foreground">
          Podaj swój adres e-mail, a wyślemy Ci link do resetowania hasła
        </p>
      </div>

      {/* Forgot Password Form */}
      <div class="bg-card border rounded-lg shadow-sm p-6 sm:p-8">
        <ForgotPasswordForm client:load />
      </div>

      {/* Help text */}
      <div class="bg-muted/50 border rounded-lg p-4">
        <p class="text-sm text-muted-foreground">
          <strong class="text-foreground">Wskazówka:</strong> Sprawdź folder spam, jeśli nie otrzymasz wiadomości w ciągu
          kilku minut.
        </p>
      </div>
    </div>
  </div>
</Layout>
