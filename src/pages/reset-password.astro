---
import Layout from "@/layouts/Layout.astro";
import ResetPasswordForm from "@/components/auth/ResetPasswordForm";

// Extract tokens from URL query params
const accessToken = Astro.url.searchParams.get("access_token");
const refreshToken = Astro.url.searchParams.get("refresh_token");

// If tokens are missing, redirect to forgot-password page
if (!accessToken || !refreshToken) {
  return Astro.redirect("/forgot-password?error=invalid_link");
}
---

<Layout title="Ustaw nowe hasło - Rytmik">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
      {/* Header */}
      <div class="text-center">
        <a href="/" class="inline-block mb-6">
          <h1 class="text-4xl font-bold text-primary">Rytmik</h1>
        </a>
        <h2 class="text-2xl font-bold">Ustaw nowe hasło</h2>
        <p class="mt-2 text-sm text-muted-foreground">Wprowadź nowe hasło do swojego konta</p>
      </div>

      {/* Reset Password Form */}
      <div class="bg-card border rounded-lg shadow-sm p-6 sm:p-8">
        <ResetPasswordForm client:load accessToken={accessToken} refreshToken={refreshToken} />
      </div>

      {/* Security notice */}
      <div class="bg-muted/50 border rounded-lg p-4">
        <p class="text-sm text-muted-foreground">
          <strong class="text-foreground">Bezpieczeństwo:</strong> Link do resetowania hasła wygasa po 1 godzinie i może
          być użyty tylko raz.
        </p>
      </div>
    </div>
  </div>
</Layout>
