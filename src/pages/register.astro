---
import Layout from "@/layouts/Layout.astro";
import RegisterForm from "@/components/auth/RegisterForm";

// Check if user is already authenticated
const token = Astro.cookies.get("sb-access-token");

if (token?.value) {
  return Astro.redirect("/profiles");
}
---

<Layout title="Rejestracja - Rytmik">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
      {/* Header */}
      <div class="text-center">
        <a href="/" class="inline-block mb-6">
          <h1 class="text-4xl font-bold text-primary">Rytmik</h1>
        </a>
        <h2 class="text-2xl font-bold">Utwórz nowe konto</h2>
        <p class="mt-2 text-sm text-muted-foreground">Rozpocznij muzyczną przygodę ze swoim dzieckiem</p>
      </div>

      {/* Registration Form */}
      <div class="bg-card border rounded-lg shadow-sm p-6 sm:p-8">
        <RegisterForm client:load />
      </div>

      {/* Additional info */}
      <div class="text-center text-xs text-muted-foreground">
        <p>
          Rejestrując się, akceptujesz nasze{" "}
          <a href="/terms" class="underline hover:text-foreground"> Warunki korzystania </a>{" "}
          oraz{" "}
          <a href="/privacy" class="underline hover:text-foreground"> Politykę prywatności </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
